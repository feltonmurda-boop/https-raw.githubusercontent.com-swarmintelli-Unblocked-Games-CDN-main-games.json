<body>

<header>
  <h1 onclick="goHome()">Unblocked Games</h1>
</header>

<main>
  <!-- GAME LIST -->
  <section id="gameList" class="grid"></section>

  <!-- GAME PAGE -->
  <section id="gamePage" class="game-container">
    <button class="back-btn" onclick="goHome()">‚Üê Back to games</button>
    <h2 id="gameTitle"></h2>
    <div class="iframe-wrapper" id="gameFrame"></div>
  </section>
</main>

<footer>
  Simple. Fast. Unblocked.
</footer>

<script>
  const GAME_JSON_URL =
    "https://raw.githubusercontent.com/swarmintelli/Unblocked-Games-CDN/main/games.json";

  const gameListEl = document.getElementById("gameList");
  const gamePageEl = document.getElementById("gamePage");
  const gameTitleEl = document.getElementById("gameTitle");
  const gameFrameEl = document.getElementById("gameFrame");

  let games = [];

  fetch(GAME_JSON_URL)
    .then(res => res.json())
    .then(data => {
      games = data;
      renderGameList();
      handleRouting();
    })
    .catch(err => {
      gameListEl.innerHTML = "<p>Failed to load games.</p>";
      console.error(err);
    });

  function renderGameList() {
    gameListEl.innerHTML = "";
    games.forEach((game, index) => {
      const card = document.createElement("div");
      card.className = "card";
      card.onclick = () => openGame(index);

      card.innerHTML = `
        <img src="${game.game_image_icon}" alt="${game.name}">
        <h3>${game.name}</h3>
      `;

      gameListEl.appendChild(card);
    });
  }

  function openGame(index) {
    location.hash = "game=" + index;
  }

  function goHome() {
    location.hash = "";
  }

  function handleRouting() {
    const hash = location.hash;

    if (hash.startsWith("#game=")) {
      const index = hash.split("=")[1];
      const game = games[index];

      if (!game) return goHome();

      gameListEl.style.display = "none";
      gamePageEl.style.display = "flex";
      gameTitleEl.textContent = game.name;
      gameFrameEl.innerHTML = game.iframe;
    } else {
      gameListEl.style.display = "grid";
      gamePageEl.style.display = "none";
      gameFrameEl.innerHTML = "";
    }
  }

  window.addEventListener("hashchange", handleRouting);
</script>

</body>
